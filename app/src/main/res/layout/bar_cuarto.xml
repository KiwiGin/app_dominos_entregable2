<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#FFFFFF"
            android:elevation="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:outlineSpotShadowColor="@color/black"
            android:padding="10dp">

        <!-- Pizza Tracker Button (Aligned to Start) -->
            <TextView
                android:id="@+id/regresar_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGRESAR"
                android:textAppearance="@style/t1"
                android:textSize="24dp" />

            <Space
                android:layout_width="80dp"
                android:layout_height="2dp"/>

            <!-- Encuentra una Tienda Button (Aligned to End) -->
            <LinearLayout
                android:id="@+id/encuentratutienda_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENCUENTRA TU TIENDA"
                    android:textAppearance="@style/t1"
                    android:textSize="24dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Layout for Buttons: Pizza Tracker and Encuentra -->


</LinearLayout>
