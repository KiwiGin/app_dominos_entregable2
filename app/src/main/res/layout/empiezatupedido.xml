<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/azulclaro">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMPIEZA TU PEDIDO"
                android:textAppearance="@style/MenuLogin"
                android:textSize="40dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="7dp">
                <TextView
                    android:id="@+id/entregados_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENTREGA A DOMICILIO"
                    android:textAppearance="@style/t2"
                    android:background="@color/rojo"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
                <Space
                    android:layout_width="30dp"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/recoger_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECOGER EN TIENDA"
                    android:textAppearance="@style/t2"
                    android:background="@color/rojo"
                    android:textSize="24dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>